extends layout

block content
  #main.container
    if(!user)
      h1 Login in order to create a gif!
    if(user)
      #video-add.row
        #new-url.col-md-6.col-md-offset-2.col-xs-6.col-xs-offset-2
          input#video_url(
            class='video_url form-control'
            type='text'
            name='video_url'
          )
        button(
          class='btn btn-primary col-md-2 col-xs-2'
          onclick='addVideo(document.getElementById(\'video_url\').value)'
        ).
          Add Video
      #videos.row.jumbotron
        p Create a gif from up to 3 videos.
        p Time intervals must be shorter than 10 seconds, each video must be shorter than 20 minutes.
        p For now.
        hr
      #submit.row
        button#submit-btn(
          class='bottom-btn btn btn-success col-md-4 col-md-offset-4'
          onclick='submit()'
        ).
          Preview your gif!
      #result-preview
      script(src='#{mountUrl}/javascripts/create.js')
